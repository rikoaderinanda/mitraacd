<style>
  .steps-container {
    position: relative;
    margin: 0px 0;
    padding-left: 20px;
  }

  .step-item {
    position: relative;
    display: flex;
    align-items: center;
    margin-bottom: 24px;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .step-item:last-child {
    margin-bottom: 0;
  }

  .step-item:hover {
    transform: translateX(6px);
  }

  .step-circle {
    width: 42px;
    height: 42px;
    border-radius: 50%;
    background: #dee2e6;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 15px;
    color: #6c757d;
    box-shadow: 0 3px 8px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
    z-index: 2;
    flex-shrink: 0;
  }

  .step-circle.active {
    background: linear-gradient(135deg, #0d6efd, #4dabf7);
    color: #fff;
    box-shadow: 0 0 10px rgba(13,110,253,0.6);
    transform: scale(1.1);
  }

  .step-circle.done {
    background: linear-gradient(135deg, #198754, #51cf66);
    color: #fff;
    box-shadow: 0 0 10px rgba(25,135,84,0.6);
  }

  .step-item .step-content {
    margin-left: 15px;
  }

  .step-item .step-content p {
    margin: 0;
    font-weight: 600;
    color: #212529;
  }

  .step-item .step-content small {
    color: #6c757d;
  }

  /* Garis Progress */
  .steps-container::before {
    content: "";
    position: absolute;
    top: 0px;
    left: 0px;
    width: 2px;
    height: calc(100% - 20px);
    background: #dee2e6;
    z-index: 0;
  }

  .progress-line {
    content: "";
    position: absolute;
    top: 0px;
    left: 0px;
    width: 2px;
    height: 0;
    background: linear-gradient(180deg, #0d6efd, #198754);
    z-index: 1;
    transition: height 0.5s ease-in-out;
  }

  .status-header {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 15px;
    background: linear-gradient(135deg, #e3f2fd, #f8f9fa);
    border-radius: 12px;
    margin-bottom: 20px;
  }

  .status-header img {
    width: 60px;
    height: 60px;
    object-fit: contain;
    animation: float 3s ease-in-out infinite;
  }

  @@keyframes float {
    0% { transform: translateY(0); }
    50% { transform: translateY(-6px); }
    100% { transform: translateY(0); }
  }

  .status-header .title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #0d6efd;
    margin: 0;
  }

  .status-header .subtitle {
    font-size: 0.9rem;
    color: #6c757d;
    margin: 0;
  }
</style>

