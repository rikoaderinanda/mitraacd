<style>
/* === Checkbox Custom === */
.custom-check {
  width: 22px;
  height: 22px;
  cursor: pointer;
  accent-color: #0d6efd; /* Warna biru Bootstrap */
}

/* Label jadi lebih enak dibaca */
.custom-label {
  cursor: pointer;
  font-weight: 500;
  margin-left: 10px;
  font-size: 0.95rem;
  color: #333;
}

/* === Wrapper tiap item === */
.kecamatan-item {
  display: flex;
  align-items: center;
  padding: 10px 12px;
  border: 1px solid #e5e5e5;
  border-radius: 10px;
  background: #fff;
  margin-bottom: 10px;
  transition: all 0.2s ease-in-out;
}

/* Efek hover biar interaktif */
.kecamatan-item:hover {
  background: #f8f9fa;
  border-color: #0d6efd;
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
