<style>
    /* Animasi shimmer */
    @@keyframes skeleton-loading {
    0% {
        background-position: -200px 0;
    }
    100% {
        background-position: 200px 0;
    }
    }

    /* Base skeleton style */
    .skeleton-text,
    .skeleton-icon {
    background: linear-gradient(90deg, #e0e0e0 25%, #f2f2f2 50%, #e0e0e0 75%);
